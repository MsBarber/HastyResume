 @model HastyResume.Models.ApplicationUser

@{
    Layout = "_LayoutNoNav";
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Personal Info - Hasty Resume</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/css/landing-page.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Animate CSS -->
    <link rel="stylesheet" type="text/css" href="~/lib/animate-css/animate.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="step-one">
    <div class="container">
        <div class="row">
            <span class="col-lg-3 col-md-3"></span>
            <div class="col-lg-6 col-md-6 form-basic animated slideInLeft">
                <h1 class="text-center">Howdy, who are you?</h1>
                <hr style="border-width:3px;border-color:orange;">
                <form asp-action="Personal">
                    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>    
                    <div class="form-group">
                        <label asp-for="FirstName">First Name:</label>
                        <input asp-for="FirstName" class="form-control" id="firstName" placeholder="First Name">
                        <span asp-validation-for="FirstName" class="text-danger" />
                    </div>
                    <hr>
                    <div class="form-group">
                        <label asp-for="LastName">Last Name:</label>
                        <input asp-for="LastName" class="form-control" id="lastName" placeholder="Last Name">
                        <span asp-validation-for="LastName" class="text-danger" />
                    </div>
                    <hr>
                    <div class="form-group">
                        <label asp-for="ContactEmail">Contact Email:</label>
                        <input asp-for="ContactEmail" class="form-control" id="emailAddress" placeholder="Email">
                        <span asp-validation-for="ContactEmail" class="text-danger"/>
                    </div>
                    <hr>
                    <div class="form-group">
                        <label asp-for="CareerField">Career Field:</label>
                        <input asp-for="CareerField" class="form-control" id="CareerField" placeholder="Expertise">
                        <span asp-validation-for="CareerField" class="text-danger"/>
                    </div>
                    <br />
                    <div class="text-center">
                        <div class="form-group">
                            <div class="col-lg-12 col-md-12">
                                <input type="submit" value="Personal" name="Next" class="btn btn-warning" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <span class="col-lg-3 col-md-3"></span>
        </div>
    </div>    
</body>
</html>