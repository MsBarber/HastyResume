@model HastyResume.Models.ApplicationUser

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Work History - Hasty Resume</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/landing-page.css" rel="stylesheet">

    <!-- Animate CSS -->
    <link rel="stylesheet" type="text/css" href="~/lib/animate-css/animate.min.css">

    <!-- Custom Fonts -->
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" type="text/javascript"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

  

</head>

<body id="step-two">
    <div class="container">
        <div class="row">
            <span class="col-lg-3 col-md-3"></span>
            <div class="col-lg-6 col-md-6 form-basic animated slideInLeft">
                <h1 class="text-center">Work History</h1>
                <hr style="border-width:3px;border-color:orange;">
                <form asp-action="Work">
                    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <section id="eduFieldWrapper">
                            <label asp-for="Wrk1_CompanyName">Company: </label>
                            <input asp-for="Wrk1_CompanyName" class="form-control" id="Wrk1_CompanyName" placeholder="Company Name">
                            <br>
                            <label for="Wrk1_CompanyPosition">Job Position:</label>
                            <input asp-for="Wrk1_CompanyPosition" class="form-control" id="Wrk1_CompanyPosition" placeholder="(Ex: Manager)">
                            <br>
                            <label asp-for="Wrk1_StartDate">Start Date:</label>
                            <input asp-for="Wrk1_StartDate" class="form-control" id="Wrk1_StartDate" placeholder="MM/DD/YYYY">
                            <br>
                            <label asp-for="Wrk1_EndDate">End Date:</label>
                            <input asp-for="Wrk1_EndDate" class="form-control" id="Wrk1_EndDate" placeholder="MM/DD/YYYY">
                            <br>
                            <label asp-for="Wrk1_BodyText">Tell Us More:</label>
                            <input asp-for="Wrk1_BodyText" textarea style="max-width:100%" type="text" class="form-control" id="Wrk1_BodyText">
                        </section>
                        <hr>
                        <div class="text-center">
                            <div class="row">
                                    <a href="#" id="addFieldGroup" class="btn btn-success text-white link-clean">Add Group</a>

                                <button type="submit" value="Work" class="btn btn-warning text-white">Continue</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">

    $(document).ready(function() {
        var maxFields   = 3;
        var wrapper     = $("#eduFieldWrapper");
        var addButton   = $("#addFieldGroup");

        var n = 1;

        function out(n) {
            html = "<br><hr style='color:#1a1a1a;border-width:3px;'><br><label for='Wrk" + String(n) + "_CompanyName'>CompanyName:</label><input type='text' class='form-control' id='Wrk" + String(n) + "_CompanyName" + String(n) + "' placeholder='Company Name'></input><br><label for='Wrk" + String(n) + "_CompanyPosition'>Start Date:</label><input type='text' class='form-control' id='Wrk" + String(n) + "_CompanyPosition' placeholder='(Ex: Manager)'></input><br><label for='Wrk" + String(n) + "_StartDate'>Start Date:</label><input type='text' class='form-control' id='Wrk" + String(n) + "_StartDate' placeholder='mm/dd/yy'></input><br><label for='Wrk" + String(n) + "_EndDate'><br>Tell Us More:</label><br><input style='max-width:100%' type='text' class='form-control' id='Wrk" + String(n) + "_EndDate'></input><br><label for='Wrk" + String(n) + "_BodyText'></label><input style='max-width:100%' type ='text' class='form-control' id='Wrk" + String(n) + "_BodyText'></input>;"

            return html;
        }

        addButton.click(function(e){
            //alert("clicked");
            e.preventDefault();
            if (n < maxFields) {
                wrapper.append(out(n));
                n++;
            }
            if (n == 3) {
                $("#addFieldGroup").remove();
            }
        })
    })

    </script>

</body>
</html>